#!/bin/bash

haystack = (audio video)

for dir in /*; do

  # check if $dir is a directory
  if [[ -d "$dir"]]
    then

  # check if determined directory matches within our permitted 'haystack'
      for dirname "${haystack[@]}"; do
        if [ "$dir" = "$dirname" ]
          then

  # execute script 'file'
            for file in "$dir"; do
              if [[ -f "$file"]]
                then
                  eval "$file"
              fi
            done

        fi
      done

  fi
done
